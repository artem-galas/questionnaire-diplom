<div class="container">
  <h3><%= @q.title %></h3>
  <div class="questions">
    <ol>
      <% @q.questions.each do |qestion| %>
        <li><%=qestion.text%></li>
        <ol>
          <% qestion.answers.each do |answer| %>
            <li>
              <label>
                <%= radio_button('qestion', 'answers', answer.text) %> <%= answer.text %>
              </label>
            </li>
          <% end %>
        </ol>
      <%end%>
    </ol>
  </div>
</div>