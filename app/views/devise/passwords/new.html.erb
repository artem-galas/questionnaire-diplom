<div class="container">

  <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class:'form-reset-pas' }) do |f| %>
    <h2>Forgot your password?</h2>
    <%= devise_error_messages! %>

    <%= f.label :email, class:'sr-only' %><br />
    <%= f.email_field :email, autofocus: true, class:'form-control', placeholder: 'Email' %>

    <div class="actions">
      <%= f.submit "Send me reset password instructions", class:'btn btn-lg btn-primary btn-block' %>
      <%= render "devise/shared/links" %>
    </div>
  <% end %>
</div>
